<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowBackground">@color/greyMedium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/arvo</item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/greenDark</item>
    </style>
</resources>
